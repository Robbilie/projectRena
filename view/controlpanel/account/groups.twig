{% set pageTitle = "Groups" %}
{% extends "controlpanel/base.twig" %}

{% block content %}
    -- Under Services, show how many are online including services information (ip, port) but refer to Services Access for username/password<br>
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
            <div class="panel-heading">
                Groups you've already joined
            </div>
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-servicesAccess">
                    <thead>
                    <tr>
                        <th style="width: 30%;">Group Name</th>
                        <th style="width: 13%;">Status</th>
                        <th style="width: 13%;">Members</th>
                        <th style="width: 13%;">Services</th>
                        <th style="width: 15%;">Leave</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>asdf</td>
                        <td><button class="btn btn-danger disabled">Closed</button></td>
                        <td><button class="btn btn-info">Members</button></td>
                        <td><button class="btn btn-info">Services</button></td>
                        <td><button class="btn btn-danger">Leave</button></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Open Groups
                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-servicesAccess">
                        <thead>
                        <tr>
                            <th style="width: 30%;">Group Name</th>
                            <th style="width: 13%;">Status</th>
                            <th style="width: 13%;">Members</th>
                            <th style="width: 13%;">Services</th>
                            <th style="width: 15%;">Join</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>asdf</td>
                            <td><button class="btn btn-success disabled">Open</button></td>
                            <td><button class="btn btn-info">Members</button></td>
                            <td><button class="btn btn-info">Services</button></td>
                            <td><button class="btn btn-success">Join</button></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/datatables/1.10.7/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-servicesAccess').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}

{% block css %}
    <link href="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/datatables/1.10.7/css/jquery.dataTables.css" rel="stylesheet">
{% endblock %}