{% set pageTitle = "Services Access" %}
{% extends "controlpanel/base.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="" page-header">Services Access</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-servicesAccess">
                    <thead>
                        <tr>
                            <th style="width: 30%;">Name</th>
                            <th style="width: 13%;">Type</th>
                            <th style="width: 13%;">IP</th>
                            <th style="width: 13%;">Port</th>
                            <th style="width: 15%;">Username</th>
                            <th style="width: 15%;">Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>OH MY GOD MY EPIC MUMBLE SERVER</td>
                            <td>Mumble</td>
                            <td>1.2.3.4</td>
                            <td>1234</td>
                            <td>{{ characterName }}</td>
                            <td>
                                <button class="btn btn-success">Generate Password</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/datatables/1.10.7/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-servicesAccess').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}

{% block css %}
    <link href="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/datatables/1.10.7/css/jquery.dataTables.css" rel="stylesheet">
{% endblock %}